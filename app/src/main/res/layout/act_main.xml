<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.move.widgetdemo.MainAct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="gotoIndicator"
            android:text="横线指示器" />

        <com.move.widget.XFlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:background="#789"
            android:padding="10dp"
            app:maxlines="2">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="hello"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:padding="10dp"
                android:text="hello"
                android:textColor="#FFFFFF" />

        </com.move.widget.XFlowLayout>

        <com.move.widget.RelativeSizeTextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="我是正常文本20sp"
            android:textSize="20sp"
            app:endText="我是蓝色后置文本为正常大小的150%"
            app:end_proportion="1.5"
            app:end_text_color="#0000FF"
            app:startText="我是前置红色文本为正常大小的80%"
            app:start_proportion="0.8"
            app:start_text_color="#FF0000" />

        <com.move.widget.StateView1
            android:id="@+id/sv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingBottom="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            app:sv1_circle_border_width="2dp"
            app:sv1_circle_color="#0000FF"
            app:sv1_circle_radius="8dp"
            app:sv1_circle_selected_color="#FF0000"
            app:sv1_data="@array/test"
            app:sv1_horizontal_space="30dp"
            app:sv1_line_color="#00FFFF"
            app:sv1_line_height="6dp"
            app:sv1_line_margin="6dp"
            app:sv1_line_selected_color="#000000"
            app:sv1_progress="-1"
            app:sv1_text_color="#FF0000"
            app:sv1_text_selected_color="#0000FF"
            app:sv1_text_size="18"
            app:sv1_vertical_space="10dp" />

    </LinearLayout>


</ScrollView>
