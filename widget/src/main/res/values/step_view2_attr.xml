<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StepView2">

        <!--小圆点的宽和高和选中和非选中的背景资源-->
        <attr name="sv2_state_size" format="dimension" />
        <attr name="sv2_state_drawable" format="reference" />
        <attr name="sv2_state_selected_drawable" format="reference" />

        <!--线条的选中和没有选中的颜色和距离圆点的边距-->
        <attr name="sv2_line_color" format="color" />
        <attr name="sv2_line_selected_color" format="color" />
        <attr name="sv2_line_height" format="dimension" />
        <attr name="sv2_line_margin" format="dimension" />

        <!--文字的选中和非选中的颜色和大小-->
        <attr name="sv2_text_size" format="integer" />
        <attr name="sv2_text_color" format="color" />
        <attr name="sv2_text_selected_color" format="color" />

        <!--横向和竖向的间距-->
        <attr name="sv2_horizontal_space" format="dimension" />
        <attr name="sv2_vertical_space" format="dimension" />

        <attr name="sv2_data" format="reference" />
        <attr name="sv2_progress" format="integer" />

    </declare-styleable>

</resources>